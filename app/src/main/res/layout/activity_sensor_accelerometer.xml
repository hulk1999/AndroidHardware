<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SensorAccelerometerActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Accelerometer Sensor"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="X Axis"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/txtXAxisAcceleration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Acceleration: "
        android:textSize="18dp"/>
    <TextView
        android:id="@+id/txtXAxis"
        android:layout_width="60px"
        android:layout_height="wrap_content"
        android:text="0.0"
        android:textSize="18dp"
        android:background="@android:color/holo_green_light"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Y Axis"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/txtYAxisAcceleration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Acceleration: "
        android:textSize="18dp"/>
    <TextView
        android:id="@+id/txtYAxis"
        android:layout_width="60px"
        android:layout_height="wrap_content"
        android:text="0.0"
        android:textSize="18dp"
        android:background="@android:color/holo_orange_light"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Z Axis"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/txtZAxisAcceleration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Acceleration: "
        android:textSize="18dp"/>
    <TextView
        android:id="@+id/txtZAxis"
        android:layout_width="60px"
        android:layout_height="wrap_content"
        android:text="0.0"
        android:textSize="18dp"
        android:background="@android:color/holo_red_light"/>

</LinearLayout>